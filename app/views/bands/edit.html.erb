<h2>Edit <%= @band.name %></h2>

<div class="row">
  <div class="col-md-8">
    <%= form_for @band, html: { method: :patch } do |f| %>
      <div class="form-group">
        <%= f.label :band_name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :members %>
        <%= f.text_field :members, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :instruments %>
        <%= f.text_field :instruments, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :genre %>
        <%= f.text_field :genre, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :requirements %>
        <%= f.text_field :requirements, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :soundcloud %>
        <%= f.text_field :soundcloud, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :facebook %>
        <%= f.text_field :facebook, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: 'form-control', placeholder: "Enter new name" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>
    <% end %>
    
  </div>
</div>