<div class="container">
  <h1><%= @band.name %></h1>

  <div class = "col-md-4 col-md-offset-4 btn-success btn-lg"><%= link_to "Search for shows", events_path%></div>
  <div class="col-md-12 upcoming ">
    <h3> Upcoming Shows </h3>
  </div>
  <div class ="col-sm-6 col-md-offset-3 display-shows">
      <% @slots.each do |slot| %>
        <% @events.each do |event| %>
          <% if slot.event_id == event.id %>
            <div class = "btn-info btn-lg"> 
              <div class="row">
                <div class = "col-sm-12"><%= link_to "#{event.title} #{slot.time}", event %>
               
                </div>
                
              </div>
              </div>
          <% end %>
        <% end %>
      <% end %>
  </div>


</div>
<div class="container">
  <div class="row col-md-12">
    <footer>Locl Shows</footer>
  </div>
</div>