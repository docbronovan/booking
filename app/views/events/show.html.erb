<div class="container">
  <div class="row col-md-12">
    <h1>SHOW DETAILS</h1>
  </div>
  <div class="row col-md-12">
    <p>Venue: <%= link_to @venue.name,"/venues/#{@venue.id}/about" %></p>
    <p>Title: <%= @event.title %></p>
    <p>Date: <%= @event.date %></p>
  </div>
  <div class="row upcoming col-md-12">
    <h3>Schedule</h3>
    <div class ="row col-md-6 col-md-offset-3 display-shows">
      
      <% @slots.each do |slot| %>
        <% if slot.confirmed == false %>
          <div class = "btn-info btn-lg"> 
            <div class="row">
              <div class = "col-sm-12">
                <h4><%=  link_to "OPEN #{slot.time} Click here to book", new_slot_slot_application_path(slot)  %></h4>  
              </div>
            </div>
          </div>

        <% else %>
          <% @slot_apps.each do |slot_app| %>
            <% if slot_app.slot == slot %>
              <% @bands.each do |band| %>
                <% if slot_app.band == band %>
                  <div class = "btn-info btn-lg"> 
                    <div class="row">
                      <div class = "col-sm-12">
                        <h4><%= link_to "#{band.name} #{slot.time}", "/bands/#{band.id}/about" %></h4> 
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="row col-md-6 col-md-offset-3">
    <div class = "col-sm-6 col-sm-offset-3">
      <div class="btn-danger">
      CANCEL SHOW
      </div>
    </div>
  </div>
  </div>

  <div class="row col-md-12">
    <div class="row col-md-6 col-md-offset-3">
    <div class = "col-sm-6 col-sm-offset-3">
    <footer>Locl Shows</footer>
    </div>
  </div>
  </div>
</div>