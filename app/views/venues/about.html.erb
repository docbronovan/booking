<div class="container center">
  <h1>ABOUT  <%= @venue.name %></h1>
  <div class="photo">
      <%= image_tag(@venue.photo.url) if @venue.photo? %>
  </div>
  <div class="col-md-12">
    <p>Name: <%= @venue.name %></p>
    <p>Address: <%= @venue.address %></p>    
    <p>City: <%= @venue.city %></p>
    <p>State: <%= @venue.state %></p>
    <p>Zip: <%= @venue.zip %></p>
    <p>neighborhood: <%= @venue.neighborhood %></p>
    <p>phone: <%= @venue.phone %></p>
    <p>website: <%= @venue.website %></p>
    <p>description: <%= @venue.description %></p>
    <p>email: <%= @venue.email %></p>
    
    
  </div>
  <% if @user == current_user %>
    <div class = "col-md-2 col-md-offset-4 btn-info btn-sm">
      <%= link_to "edit info", edit_venue_path %>
    </div>
  <% end %>

  <div>
    <%= link_to "Back", @band %>
  </div>
</div>