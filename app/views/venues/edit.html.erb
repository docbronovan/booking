<% if @venue.errors.any? %>
  <div class="alert alert-danger">
    <h4>There are <%= pluralize(@venue.errors.count, "error") %>.</h4>
    <ul>
      <% @venue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container center">
  <h2>Edit <%= @venue.name %></h2>

  <div class="row">
    <div class="col-md-8">
      <%= form_for @venue, html: { method: :patch } do |f| %>
        <div class="form-group">
          <%= f.label :venue_name %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Enter new name" %>
        </div>

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control', placeholder: "Enter new address" %>
        </div>

        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city, class: 'form-control', placeholder: "Enter new city" %>
        </div>

        <div class="form-group">
          <%= f.label :state %>
          <%= f.text_field :state, class: 'form-control', placeholder: "Enter new state" %>
        </div>

        <div class="form-group">
          <%= f.label :zip %>
          <%= f.text_field :zip, class: 'form-control', placeholder: "Enter new zip" %>
        </div>

        <div class="form-group">
          <%= f.label :neighborhood %>
          <%= f.text_field :neighborhood, class: 'form-control', placeholder: "Enter new neighborhood" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control', placeholder: "Enter new description" %>
        </div>

        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: 'form-control', placeholder: "Enter new phone" %>
        </div>

        <div class="form-group">
          <%= f.label :website %>
          <%= f.text_field :website, class: 'form-control', placeholder: "Enter new website" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control', placeholder: "Enter new email" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email_confirmation %>
          <%= f.text_field :email_confirmation, class: 'form-control', placeholder: "Confirm venue email address", :value => @email %>
        </div>

        <% if @venue.photo? %>
           <div class="form-group">
             <p>Current Photo</p>
             <%= image_tag( @venue.photo.profile.url ) %>
           </div>
         <% end %>

         <div class="form-group">
           <%= f.label :photo %>
           <%= f.file_field :photo %>
           <%= f.hidden_field :photo_cache %>
         </div>

        <div class="form-group">
          <%= f.submit "Update", class: 'btn btn-success' %>
        </div>

      <% end %>
      
    </div>
  </div>
</div>