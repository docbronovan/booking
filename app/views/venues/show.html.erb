<div class="container">
  <p>Find me in app/views/venues/show.html.erb</p>
    <p>Venue index</p><br>
  <h1><%= @venue.name %></h1>


  <div class = "col-md-4 col-md-offset-4 btn-success btn-lg"> <%= link_to "New Event", [:new, @venue, :event]  %></div>

  <div class = "row"> </div>
  <div class="row column-headers">
      <div class="col-md-2 col-md-offset-2">    
        DATE
      </div>
      <div class="col-md-3">
        EVENT TITLE
      </div>
      <div class="col-md-2">
        OPEN SLOTS
      </div>
    </div>
  <% @events.each do |event| %>
    <% if event.venue == @venue %>
      
      <div class="row">
        
        <div class="col-md-2 col-md-offset-2"> 
          <div class="list-group-item">    
            <strong><%= link_to event.date, [@venue,event] %></strong>
          </div>
        </div>

        <div class="col-md-3">
          <div class="list-group">  
            <div class="list-group-item"> 
              <div class="item-edit-delete">
                <%= link_to event.title, [@venue,event] %>
              </div>
            </div> 
          </div>
        </div>
        
        <div class="col-md-2">
          <div class="list-group">
            <div class="list-group-item"> 
              <%= link_to "OPEN", [@venue,event] %>
            </div> 
          </div>
        </div>

      </div>

    <% end %>
  <% end %>

</div>